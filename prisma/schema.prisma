generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model CockpitPost {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String?
  published Boolean  @default(false)
  author    CockpitUser     @relation(fields: [authorId], references: [id])
  authorId  Int
}

model CockpitProfile {
  id     Int     @id @default(autoincrement())
  bio    String?
  user   CockpitUser    @relation(fields: [userId], references: [id])
  userId Int     @unique
}

model CockpitUser {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  name    String?
  posts   CockpitPost[]
  profile CockpitProfile?
}